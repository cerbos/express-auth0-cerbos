{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:disable",
    "group:allNonMajor",
    ":separateMultipleMajorReleases",
    ":gitSignOff"
  ],
  "automerge": true,
  "automergeSchedule": [
    "after 9am and before 5pm every weekday"
  ],
  "major": {
    "automerge": false
  },
  "masterIssue": true,
  "baseBranches": [
    "main"
  ],
  "additionalReviewers": [
    "alexolivier"
  ]
}